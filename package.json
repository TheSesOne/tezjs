{
  "name": "tez",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "engines": {
    "node": ">=14.6.0"
  },
  "scripts": {
    "release": "node ./scripts/release.js",
    "release-test": "node --experimental-specifier-resolution=node --loader ts-node/esm ./scripts/release.ts",
    "lint": "eslint",
    "test": "jest",
    "tez": "node ./packages/cli/bin/tez.mjs",
    "build:strapi": "yarn run tez build playgrounds/strapi",
    "dev:strapi": "yarn run tez dev playgrounds/strapi",
    "build:playground:tailwind": "yarn run tez build playgrounds/tailwind",
    "dev:playground:auto-routes": "yarn run tez dev playgrounds/auto-routes",
    "dev:playground:tailwind": "yarn run tez dev playgrounds/tailwind",
    "dev:playground:vuex": "yarn run tez dev playgrounds/vuex",
    "dev:playground:env": "yarn run tez dev playgrounds/env",
    "build:template:strapi:frontend": "yarn run tez build packages/create-tez/template-tez-strapi-vue/frontend",
    "dev:template:strapi:frontend": "yarn run tez dev packages/create-tez/template-tez-strapi-vue/frontend",
    "dev:template:strapi:backend": "yarn --cwd ./packages/create-tez/template-tez-strapi-vue/backend develop",
    "stub": "lerna run stub -- --stub && npm run build:vue",
    "build:vue": "lerna run build --stream --no-prefix",
    "build": "lerna run stub --stream --no-prefix",
    "develop:package": "tsc --watch",
    "develop:strapi": "yarn --cwd ./tz-app/tez-strapi-app/strapi develop",
    "develop:tez": "wait-on http://localhost:1337/admin && yarn --cwd ./tz-app/tez-strapi-app/tez dev",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "install:packages": "(cd tz-app/tez-strapi-app/tez && npm install) && (cd..) && (cd strapi && npm install) "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tezjs/tez.js.git"
  },
  "author": "ajayojha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tezjs/tez.js/issues"
  },
  "homepage": "https://github.com/tezjs/tez.js#readme",
  "resolutions": {
    "@tezjs/common": "link:./packages/common",
    "@tezjs/payload": "link:./packages/payload",
    "@tezjs/types": "link:./packages/types",
    "@tezjs/vite": "link:./packages/vite",
    "@tezjs/vue": "link:./packages/vue",
    "@tezjs/js": "link:./packages/js",
    "tez": "link:./packages/cli",
    "unbuild": "^0.7.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "7.0.3",
    "eslint": "^8.15.0",
    "eslint-plugin-vue": "^8.7.1",
    "lerna": "^4.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "^8.4.13",
    "tailwindcss": "^3.0.24",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5",
    "wait-on": "5.2.1"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.2",
    "conventional-changelog": "^3.1.25",
    "execa": "^6.1.0",
    "express": "^4.18.1",
    "globby": "^13.1.1",
    "jest": "^27.5.1",
    "ohmyfetch": "^0.4.17",
    "path-to-regexp": "^6.2.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.7",
    "ts-jest": "^27.0.0",
    "tslib": "^2.3.1",
    "unbuild": "^0.7.4",
    "vue-tsc": "^0.34.11"
  }
}
