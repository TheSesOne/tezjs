{
  "name": "tez",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "lint": "eslint",
    "test": "jest",
    "tez": "node ./packages/cli/bin/tez.mjs",
    "dev": "yarn run tez dev playground",
    "stub": "lerna run prepack -- --stub",
    "build": "lerna run prepack --stream --no-prefix",
    "develop:package": "tsc --watch",
    "develop:strapi": "yarn --cwd ./tz-app/tez-strapi-app/strapi develop",
    "develop:tez": "wait-on http://localhost:1337/admin && yarn --cwd ./tz-app/tez-strapi-app/tez dev",
    "develop": "cross-env FORCE_COLOR=1 npm-run-all -l -p develop:*",
    "install:packages": "(cd tz-app/tez-strapi-app/tez && npm install) && (cd..) && (cd strapi && npm install) "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tezjs/tez.js.git"
  },
  "author": "ajayojha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tezjs/tez.js/issues"
  },
  "homepage": "https://github.com/tezjs/tez.js#readme",
  "resolutions": {
    "@tezjs/common": "link:./@tezjs/common",
    "@tezjs/payload": "link:./@tezjs/payload",
    "@tezjs/types": "link:./@tezjs/types",
    "@tezjs/vite": "link:./@tezjs/vite",
    "@tezjs/vue": "link:./@tezjs/vue",
    "tez": "link:./@tezjs/cli",
    "unbuild": "^0.7.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "cross-env": "7.0.3",
    "eslint": "^8.15.0",
    "eslint-plugin-vue": "^8.7.1",
    "lerna": "^4.0.0",
    "npm-run-all": "4.1.5",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5",
    "wait-on": "5.2.1"
  },
  "dependencies": {
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.0",
    "tslib": "^2.3.1",
    "unbuild": "^0.7.4",
    "vue-tsc": "^0.34.11"
  }
}
