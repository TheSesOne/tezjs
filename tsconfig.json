{
    "compilerOptions": {
      "rootDir": ".",
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
       "noUnusedLocals": false,
       "noImplicitAny": false,
       "noImplicitReturns": false,
       "noImplicitThis": false,
       "noImplicitUseStrict": false,
      "removeComments": true,
      "declaration": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "target": "es2019",
      "lib": [
        "es2019"
      ],
      "module": "commonjs",
      "outDir": "./tz-app/node_modules",
      "sourceMap": false,
      "typeRoots": [
        "./node_modules/@types"
      ],
      "paths": {
        "@tezjs/payload":["./@tezjs/payload"],
        "@tezjs/common":["./@tezjs/common"],
        "@tezjs/core":["./@tezjs/core"],
        "@tezjs/vue-router":["./@tezjs/router"],
        "@tezjs/strapi":["./@tezjs/strapi"],
        "@tezjs/vite":["./@tezjs/vite"],
        "@tezjs/types":["./@tezjs/types"]
      }
    },
    "include": [
      "./@tezjs/**/*.ts",
      "./@tezjs/**/package.json"

    ],
    "exclude": ["dist","src","@tezjs/payload/runtime/**","./**/node_modules/**","./node_modules/**"]
   
  }
  